{
  "name": "leximaven",
  "version": "0.1.1",
  "description": "A command line tool for searching word-related APIs.",
  "author": "Andrew Prentice",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "build/leximaven.js",
  "bin": {
    "leximaven": "build/leximaven.js"
  },
  "scripts": {
    "release": "standard-version",
    "bump": "git push origin master --tags && npm publish",
    "lcov": "./node_modules/.bin/nyc report -r text-lcov > lcov.info",
    "cover": "cat lcov.info | ./node_modules/.bin/coveralls",
    "climate": "./node_modules/.bin/codeclimate-test-reporter < lcov.info",
    "report": "./node_modules/.bin/nyc report -r html",
    "pretest": "./node_modules/.bin/babel test/test.es6 -o test/test.js",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/_mocha test/test.js"
  },
  "nyc": {
    "cache": true,
    "include": [
      "build/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "dotty": "^0.0.2",
    "glob": "^7.0.5",
    "good-guy-http": "^1.7.3",
    "lodash": "^4.14.1",
    "moment": "^2.14.1",
    "noon": "^1.0.12",
    "ora": "^0.3.0",
    "x-ray": "^2.3.0",
    "xml2js": "^0.4.17",
    "yargonaut": "^1.1.2",
    "yargs": "git+https://github.com/yargs/yargs.git"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.3",
    "cz-conventional-changelog": "^1.1.6",
    "del": "^2.2.1",
    "eslint": "^3.2.0",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-coveralls": "^0.1.4",
    "gulp-eslint": "^3.0.1",
    "ink-docstrap": "^1.2.1",
    "mocha": "^3.0.0",
    "npm-check-updates": "^2.7.2",
    "nyc": "^7.1.0",
    "rimraf": "^2.5.4",
    "run-sequence": "^1.2.2",
    "standard-version": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drawnepicenter/leximaven.git"
  },
  "bugs": {
    "url": "https://github.com/drawnepicenter/leximaven/issues"
  },
  "homepage": "https://github.com/drawnepicenter/leximaven#readme",
  "keywords": [
    "lyracyst",
    "lyricist",
    "leximaven",
    "cli",
    "word",
    "search",
    "api",
    "scraper",
    "rest",
    "anagram",
    "acronym",
    "define",
    "dictionary",
    "thesaurus",
    "slang",
    "rhyme",
    "pronunciation"
  ]
}
